{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "dashboard/src/**",
      "dashboard/index.html"
    ],
    "rewrites": [
      {
        "source": "/dashboard",
        "destination": "/dashboard/dist/index.html"
      },
      {
        "source": "/dashboard/",
        "destination": "/dashboard/dist/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
}


